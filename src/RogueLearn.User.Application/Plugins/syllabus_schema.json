{
  "schemaDescription": "This document defines the data structure and types for a University Subject Syllabus.",
  "syllabusSchema": {
    "type": "object",
    "description": "Defines the structure for a detailed subject syllabus.",
    "properties": {
      "syllabusId": {
        "type": "number",
        "description": "The unique identifier for the syllabus."
      },
      "syllabusName": {
        "type": "string",
        "description": "The name of the syllabus in the local language."
      },
      "syllabusEnglish": {
        "type": ["string", "null"],
        "description": "The English name of the syllabus."
      },
      "subjectCode": {
        "type": "string",
        "description": "The code of the subject this syllabus belongs to."
      },
      "noCredit": {
        "type": "number",
        "description": "Number of credits for the subject."
      },
      "degreeLevel": {
        "type": "string",
        "description": "The academic level (e.g., 'Bachelor')."
      },
      "timeAllocation": {
        "type": "object",
        "description": "Breakdown of study hours.",
        "properties": {
          "totalStudyHours": { "type": "number" },
          "contactHours": { "type": "number" },
          "selfStudyHours": { "type": "number" },
          "finalExamHours": { "type": "number", "description": "Optional field." },
          "practicalExamMinutes": { "type": "number", "description": "Optional field." }
        }
      },
      "preRequisite": {
        "type": ["string", "null"],
        "description": "Prerequisite courses for this subject."
      },
      "description": {
        "type": "string",
        "description": "A detailed description of the course content and objectives."
      },
      "studentTasks": {
        "type": "array",
        "description": "A list of responsibilities and tasks for the student.",
        "items": { "type": "string" }
      },
      "tools": {
        "type": "array",
        "description": "A list of required software or hardware tools.",
        "items": { "type": "string" }
      },
      "scoringScale": {
        "type": ["number", "null"],
        "description": "The grading scale used (e.g., 10 or 100)."
      },
      "decision": {
        "type": "object",
        "description": "Approval decision details for the syllabus.",
        "properties": {
          "number": { "type": "string" },
          "date": { "type": "string", "description": "Format YYYY-MM-DD" }
        }
      },
      "isApproved": { "type": "boolean" },
      "minAvgMarkToPass": { "type": ["number", "null"] },
      "isActive": { "type": "boolean" },
      "approvedDate": { "type": "string", "description": "Format YYYY-MM-DD" },
      "materials": {
        "type": "array",
        "description": "List of teaching and learning materials.",
        "items": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "author": { "type": ["string", "null"] },
            "publisher": { "type": ["string", "null"] },
            "publishedDate": { "type": ["string", "null"] },
            "edition": { "type": ["string", "null"] },
            "isbn": { "type": ["string", "null"] },
            "url": { "type": "string", "description": "Optional URL for online resources." },
            "note": { "type": "string", "description": "Optional notes." }
          }
        }
      },
      "courseLearningOutcomes": {
        "type": "array",
        "description": "List of Course Learning Outcomes (CLOs).",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "description": "The CLO identifier (e.g., 'CLO1')." },
            "details": { "type": "string", "description": "Detailed description of the CLO." }
          }
        }
      },
      "sessions": {
        "type": "array",
        "description": "Detailed schedule of all teaching sessions.",
        "items": {
          "type": "object",
          "properties": {
            "session": { "type": "number" },
            "topic": { "type": "string" },
            "learningType": { "type": "string", "description": "e.g., 'Offline', 'Online'." },
            "los": { "type": "array", "items": { "type": "string" } },
            "itu": { "type": ["string", "null"] },
            "studentMaterials": { "type": ["string", "null"] },
            "downloads": { "type": ["string", "null"] },
            "studentTasks": { "type": ["string", "null"] }
          }
        }
      },
      "constructiveQuestions": {
        "type": "array",
        "description": "List of questions to guide student learning.",
        "items": {
          "type": "object",
          "properties": {
            "sessionNo": { "type": "number" },
            "name": { "type": "string" },
            "details": { "type": "string" }
          }
        }
      },
      "assessments": {
        "type": "array",
        "description": "Breakdown of all assessment components.",
        "items": {
          "type": "object",
          "properties": {
            "category": { "type": "string" },
            "type": { "type": "string" },
            "part": { "type": "number" },
            "weight": { "type": "number", "description": "Percentage weight of the assessment." },
            "completionCriteria": { "type": "string" },
            "duration": { "type": "string" },
            "clos": { "type": "array", "items": { "type": "string" } },
            "questionType": { "type": ["string", "null"] },
            "noQuestion": { "type": ["number", "string", "null"] },
            "knowledgeAndSkill": { "type": ["string", "null"] },
            "gradingGuide": { "type": "string" },
            "note": { "type": "string", "description": "Optional notes." }
          }
        }
      }
    }
  }
}